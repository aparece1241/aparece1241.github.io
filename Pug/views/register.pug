extends layout.pug

block content
    form(action="/register/", method="post")
        .form-group 
            label(for="name") Name:
            input.form-control(type="text", name="name", placeholder="Enter Username ...")
        .form-group
            label(for="email") Email:
            input.form-control(type="text", name="email", placeholder="Enter Your Email ...")
        
            label(for="password") Password:
            input.form-control(type="password", name="password", placeholder="Enter password ...")            
            
            input(type="submit", value="Rigester")